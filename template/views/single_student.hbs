<script>

  let urlpaen = window.location.search
  const param = new URLSearchParams(urlpaen)
  const id = param.get('id')
  const port = window.location.port
  var url = "https://www.koduapp-admin" + "/student_data/" + id

  var cUrl = "https://www.koduapp-admin" + "/comment_data/" + id
  console.log(url)

  fetch(url)
    .then(function (serverPromise) {
      serverPromise.json()
        .then(function (j) {
          console.log(j);
          document.getElementById('name').innerHTML = j.name
          document.getElementById('lastname').innerHTML = j.lastname
          document.getElementById('father_name').innerHTML = j.fathername
          document.getElementById('mother_name').innerHTML = j.mothername
          document.getElementById('adrress').innerHTML = j.address
          document.getElementById('course').innerHTML = j.course
          document.getElementById('phone').innerHTML = j.phone

          document.getElementById('campus').innerHTML = j.campus


        })
        .catch(function (e) {
          console.log(e);
        });
    })
    .catch(function (e) {
      console.log(e);
    });




  
  document.getElementById('sid').value = id




  fetch(cUrl)
    .then(function (serverPromise) {
      serverPromise.json()
        .then(function (j) {

          j.forEach(c => {


            let mainbody = document.getElementById("commentbody")
            let cdiv = document.createElement('div')
            let odiv = document.createElement('div')
            let p = document.createElement('p')
            let cmt = document.createTextNode(c.scomment)
             cdiv.classList.add('card', 'mb-4')
            cdiv.classList.add('card-body', 'my-1')
            p.appendChild(cmt)
            cdiv.appendChild(p)
            odiv.appendChild(cdiv)
            mainbody.appendChild(odiv)
          })

        })
        .catch(function (e) {
          console.log(e);

        });
    })
    .catch(function (e) {
      console.log(e);
    });

